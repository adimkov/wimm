 // See https://go.microsoft.com/fwlink/?LinkId=733558
 // for the documentation about the tasks.json format
{
    "version": "0.1.0",
    "isShellCommand": false,
    "showOutput": "always",
    "tasks": [
        {
            "command": "./node_modules/.bin/gulp",
            "taskName": "build",
            "showOutput": "always",
            "args": [
                "build"
            ],
            "isBuildCommand": true
        },
        {
            "command": "./node_modules/.bin/gulp",
            "taskName": "publish",
            "showOutput": "always",
            "args": [
                "publish"
            ]
        },
        {
            "command": "./node_modules/.bin/bower",
            "taskName": "bower-install",
            "showOutput": "always",
            "args": [
                "install"
            ]
        }
    ]
}